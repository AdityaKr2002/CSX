<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Providers"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1F6FEB" />

        <Button
            android:id="@+id/btn_deselect_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select None"
            android:textColor="#FFFFFF"
            android:backgroundTint="#BB2D3B"
            android:layout_marginStart="6dp" />

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:focusable="true"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:nextFocusDown="@id/list_container"
            android:nextFocusLeft="@id/btn_deselect_all"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- Subtext -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable or Disable Source Providers"
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="10dp" />

    <!-- Divider -->
    <ImageView
        android:src="@android:drawable/divider_horizontal_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <!-- Scrollable list -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fillViewport="true">

    <LinearLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:nextFocusUp="@id/btn_save"
        android:paddingBottom="10dp" />
</ScrollView>

    </LinearLayout>
